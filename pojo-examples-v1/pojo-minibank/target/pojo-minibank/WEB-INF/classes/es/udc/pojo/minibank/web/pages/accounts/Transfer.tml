<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:title="title">

<form t:type="Form" class="form-horizontal" t:id="transferForm">
	
	<t:errors/>
	
    <div class="form-group">
        <t:label for="sourceAccountId" class="col-md-offset-3 col-md-2"/>
        <div class="col-md-3">
			<input t:type="TextField" t:id="sourceAccountId" t:validate="required, min=0"
				   size="16" maxlength="16"/>
        </div>   
    </div>

    <div class="form-group">
        <t:label for="destinationAccountId" class="col-md-offset-3 col-md-2"/>
        <div class="col-md-3">
			<input t:type="TextField" t:id="destinationAccountId" t:validate="required, min=0"
				   size="16" maxlength="16"/>
        </div>   
    </div>

    <div class="form-group">
        <t:label for="amount" class="col-md-offset-3 col-md-2"/>
        <div class="col-md-3">
			<input t:type="TextField" t:id="amount" 
			       t:validate="required" size="16" maxlength="16"/>
        </div>
    </div>

    <div class="form-group">
    	<div class="col-md-offset-5 col-md-1">
			<button type="submit" class="btn btn-primary">${message:transfer}</button>
		</div>
    </div>

</form>
		
</html>
